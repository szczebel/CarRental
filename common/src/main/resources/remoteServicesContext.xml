<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="tenantExecutor" class="invoker.TenantInvokerRequestExecutor"/>

    <bean class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="http://localhost:8088/http/TestService"/>
        <property name="serviceInterface" value="common.service.TestService"/>
        <property name="httpInvokerRequestExecutor" ref="tenantExecutor"/>
    </bean>

    <bean class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="http://localhost:8088/http/AvailabilityService"/>
        <property name="serviceInterface" value="common.service.AvailabilityService"/>
    </bean>

    <bean class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="http://localhost:8088/http/BookingService"/>
        <property name="serviceInterface" value="common.service.BookingService"/>
    </bean>
    <bean class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="http://localhost:8088/http/ClientService"/>
        <property name="serviceInterface" value="common.service.ClientService"/>
    </bean>
    <bean class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="http://localhost:8088/http/FleetService"/>
        <property name="serviceInterface" value="common.service.FleetService"/>
    </bean>
    <bean class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="http://localhost:8088/http/HistoryService"/>
        <property name="serviceInterface" value="common.service.HistoryService"/>
    </bean>
    <bean class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="http://localhost:8088/http/RentalClassService"/>
        <property name="serviceInterface" value="common.service.RentalClassService"/>
    </bean>
    <bean class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="http://localhost:8088/http/RentalService"/>
        <property name="serviceInterface" value="common.service.RentalService"/>
    </bean>
</beans>