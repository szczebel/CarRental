<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="http://www.springframework.org/schema/beans      http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util       http://www.springframework.org/schema/util/spring-util-2.5.xsd
                           http://www.springframework.org/schema/context    http://www.springframework.org/schema/context/spring-context.xsd">



    <context:component-scan base-package="server.service"/>
    <context:annotation-config/>

    <bean id="httpServer"
          class="org.springframework.remoting.support.SimpleHttpServerFactoryBean">
        <property name="contexts">
            <util:map>
                <entry key="/http/TestService">
                        <bean class="org.springframework.remoting.httpinvoker.SimpleHttpInvokerServiceExporter">
                            <property name="service" ref="testService"/>
                            <property name="serviceInterface" value="common.service.TestService"/>
                        </bean>
                </entry>

                <entry key="/http/BookabilityService">
                    <bean class="org.springframework.remoting.httpinvoker.SimpleHttpInvokerServiceExporter">
                        <property name="service" ref="bookabilityService"/>
                        <property name="serviceInterface" value="common.service.BookabilityService"/>
                    </bean>
                </entry>

                <entry key="/http/BookingService">
                    <bean class="org.springframework.remoting.httpinvoker.SimpleHttpInvokerServiceExporter">
                        <property name="service" ref="bookingService"/>
                        <property name="serviceInterface" value="common.service.BookingService"/>
                    </bean>
                </entry>
                <entry key="/http/ClientService">
                    <bean class="org.springframework.remoting.httpinvoker.SimpleHttpInvokerServiceExporter">
                        <property name="service" ref="clientService"/>
                        <property name="serviceInterface" value="common.service.ClientService"/>
                    </bean>
                </entry>
                <entry key="/http/FleetService">
                    <bean class="org.springframework.remoting.httpinvoker.SimpleHttpInvokerServiceExporter">
                        <property name="service" ref="fleetService"/>
                        <property name="serviceInterface" value="common.service.FleetService"/>
                    </bean>
                </entry>
                <entry key="/http/HistoryService">
                    <bean class="org.springframework.remoting.httpinvoker.SimpleHttpInvokerServiceExporter">
                        <property name="service" ref="historyService"/>
                        <property name="serviceInterface" value="common.service.HistoryService"/>
                    </bean>
                </entry>
                <entry key="/http/RentabilityService">
                    <bean class="org.springframework.remoting.httpinvoker.SimpleHttpInvokerServiceExporter">
                        <property name="service" ref="rentabilityService"/>
                        <property name="serviceInterface" value="common.service.RentabilityService"/>
                    </bean>
                </entry>
                <entry key="/http/RentalClassService">
                    <bean class="org.springframework.remoting.httpinvoker.SimpleHttpInvokerServiceExporter">
                        <property name="service" ref="rentalClassService"/>
                        <property name="serviceInterface" value="common.service.RentalClassService"/>
                    </bean>
                </entry>
                <entry key="/http/RentalService">
                    <bean class="org.springframework.remoting.httpinvoker.SimpleHttpInvokerServiceExporter">
                        <property name="service" ref="rentalService"/>
                        <property name="serviceInterface" value="common.service.RentalService"/>
                    </bean>
                </entry>
            </util:map>
        </property>
        <property name="port" value="8088"/>
    </bean>

</beans>